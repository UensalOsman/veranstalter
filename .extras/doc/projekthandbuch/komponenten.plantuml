@startuml Komponenten

left to right direction

actor RESTClient
actor GraphQLClient

node "Nest" {
  [RequestLoggerMiddleware]

  [VeranstalterController]
  [VeranstalterResolver]

  [VeranstalterService]

  [PrismaClient]

  [MailService]
}


cloud {
    [Prisma]
}

cloud {
    [nest-keycloak-connect]
}

cloud {
    [nodemailer]
}

database "DB veranstalter" {
    [Tabelle veranstalter]
    [Tabelle standort]
    [Tabelle titel]
}

node {
    [Keycloak]
}

node {
    [Mailserver]
}

RESTClient ~~> [RequestLoggerMiddleware]
GraphQLClient ~~> [RequestLoggerMiddleware]

[RequestLoggerMiddleware] ~~> [VeranstalterController]
[RequestLoggerMiddleware] ~~> [VeranstalterResolver]

[VeranstalterController] ..> [VeranstalterService]
[VeranstalterResolver] ..> [VeranstalterService]
[VeranstalterService] ..> [PrismaClient]

[PrismaClient] ~~> [Prisma]
[Prisma] ~~> [Tabelle veranstalter]
[Prisma] ~~> [Tabelle standort]
[Prisma] ~~> [Tabelle teilnehmer]

[VeranstalterController] ..> [nest-keycloak-connect]
[nest-keycloak-connect] ~~> [Keycloak]

[VeranstalterService] ..> [MailService]
[MailService] ~~> [nodemailer]
[nodemailer] ~~> [Mailserver]

[MailService] ~[hidden]~> [nest-keycloak-connect]

